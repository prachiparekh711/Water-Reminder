<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/_20sdp">

    <RelativeLayout
        android:id="@+id/t1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Adjust Intake Goal"
            android:textColor="@color/black"
            android:textSize="@dimen/_13sdp"
            android:textStyle="bold"></TextView>

        <ImageView
            android:id="@+id/resetGoal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:src="@drawable/ic_baseline_refresh_24"></ImageView>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/t2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/t1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/_10sdp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/goal1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="154"
            android:textColor="@color/black"
            android:textSize="@dimen/_25sdp"
            android:textStyle="bold"></TextView>

        <TextView
            android:id="@+id/goalIn1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_5sdp"
            android:text="fl oz"
            android:textColor="@color/black"
            android:textSize="@dimen/_12sdp"></TextView>
    </LinearLayout>

    <com.warkiz.widget.IndicatorSeekBar
        android:id="@+id/seekBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/t2"
        android:layout_marginTop="@dimen/_10sdp"
        android:visibility="gone"
        app:isb_indicator_color="@color/grey"
        app:isb_indicator_text_color="@color/colorAccent"
        app:isb_indicator_text_size="18sp"
        app:isb_max="4500"
        app:isb_min="800"
        app:isb_only_thumb_draggable="false"
        app:isb_progress="900"
        app:isb_seek_smoothly="true"
        app:isb_show_indicator="rounded_rectangle"
        app:isb_show_tick_marks_type="divider"
        app:isb_thumb_color="@color/grey"
        app:isb_thumb_size="15dp"
        app:isb_tick_marks_color="@color/black"
        app:isb_tick_marks_size="13dp"
        app:isb_track_background_color="@color/blue"
        app:isb_track_background_size="2dp"
        app:isb_track_progress_color="@color/blue"
        app:isb_track_progress_size="4dp" />

    <com.warkiz.widget.IndicatorSeekBar
        android:id="@+id/seekBar1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/t2"
        android:layout_marginTop="@dimen/_10sdp"
        android:visibility="visible"
        app:isb_indicator_color="@color/grey"
        app:isb_indicator_text_color="@color/colorAccent"
        app:isb_indicator_text_size="18sp"
        app:isb_max="154"
        app:isb_min="27"
        app:isb_only_thumb_draggable="false"
        app:isb_progress="50"
        app:isb_seek_smoothly="true"
        app:isb_show_indicator="rounded_rectangle"
        app:isb_show_tick_marks_type="divider"
        app:isb_thumb_color="@color/grey"
        app:isb_thumb_size="15dp"
        app:isb_tick_marks_color="@color/black"
        app:isb_tick_marks_size="13dp"
        app:isb_track_background_color="@color/blue"
        app:isb_track_background_size="2dp"
        app:isb_track_progress_color="@color/blue"
        app:isb_track_progress_size="4dp" />

</RelativeLayout>